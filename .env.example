# Halo Application Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development

# API Configuration
pickleclueless_API_URL=http://localhost:9001
pickleclueless_API_TIMEOUT=10000

# Web Server Configuration
pickleclueless_WEB_URL=http://localhost:3001
pickleclueless_WEB_PORT=3001

# Logging
pickleclueless_LOG_LEVEL=info
pickleclueless_DEBUG=false

# Feature Flags
pickleclueless_ENABLE_EXPERIMENTAL=false

# External Services (Optional - can be set in app settings)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# DEEPGRAM_API_KEY=...
# ASSEMBLYAI_API_KEY=...